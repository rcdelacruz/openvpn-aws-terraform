# Copy this file to terraform.tfvars and customize for your environment

# Core AWS Configuration
aws_region  = "us-east-1"
owner       = "DevOps Team"
environment = "prod"
name_prefix = "openvpn"

# Common tags for all resources
common_tags = {
  Project     = "OpenVPN-Enterprise"
  Environment = "Production"
  Owner       = "DevOps"
  CostCenter  = "IT"
  Terraform   = "true"
}

# VPC Configuration
create_vpc = true
vpc_cidr   = "10.0.0.0/16"
# existing_vpc_id = "vpc-12345678"  # Uncomment if using existing VPC

# EC2 Configuration
instance_type     = "t3.medium"  # Adjust based on user load
architecture      = "x86_64"
root_volume_size  = 30
root_volume_type  = "gp3"

# Key Pair Configuration
create_key_pair = true
# existing_key_pair_name = "my-existing-key"  # Uncomment if using existing key

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this for better security
admin_cidr_blocks   = ["203.0.113.0/24"]  # Your office IP range

# OpenVPN Ports
enable_tcp_port = true
enable_udp_port = true
tcp_port        = 443
udp_port        = 1194
admin_port      = 943
client_web_port = 945

# OpenVPN Configuration
admin_user    = "admin"
# admin_password = "YourSecurePassword123!"  # Leave commented for auto-generation
reroute_gw    = true
reroute_dns   = true
vpn_network   = "172.27.224.0"
vpn_netmask   = 20

# High Availability (Optional)
enable_high_availability = false
min_size                = 1
max_size                = 3
desired_capacity        = 1

# SSL Certificate Configuration
domain_name       = "vpn.yourdomain.com"
enable_ssl_cert   = true
certificate_email = "admin@yourdomain.com"

# DNS Configuration
create_dns_record = true
hosted_zone_id    = "Z1234567890ABC"

# Monitoring Configuration
enable_monitoring          = true
enable_detailed_monitoring = false
create_sns_topic          = true
sns_topic_name            = "openvpn-alerts"
alert_email               = "alerts@yourdomain.com"

# Monitoring Thresholds
cpu_alarm_threshold     = 80
memory_alarm_threshold  = 80
disk_alarm_threshold    = 80
network_alarm_threshold = 1000000000  # 1GB

# Backup Configuration
enable_backup         = true
backup_retention_days = 30
backup_schedule       = "cron(0 2 * * ? *)"  # Daily at 2 AM

# Terraform State Configuration (Optional)
# terraform_state_bucket = "your-terraform-state-bucket"
# terraform_lock_table   = "your-terraform-lock-table"